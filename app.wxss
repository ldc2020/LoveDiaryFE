/**app.wxss**/
/* 引入iconfont图标库 */
@import "/iconfont/iconfont.wxss";

/* 全局样式 */
page {
  background: transparent;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局背景图片样式 */
.global-bg-image {
  position: fixed;
  top: -200rpx; /* 向上扩展覆盖下拉区域 */
  left: 0;
  width: 100%;
  height: calc(100% + 400rpx); /* 增加高度覆盖上下拉伸区域 */
  z-index: -1;
  opacity: 1;
  transform: translateZ(0); /* 启用硬件加速 */
  will-change: transform; /* 优化渲染性能 */
  pointer-events: none; /* 防止背景图片干扰触摸事件 */
}
