/* 烹饪计划页面样式 */

.cooking-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 20rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.smart-input-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  color: white;
  font-size: 28rpx;
}

.smart-input-btn .iconfont {
  margin-right: 8rpx;
  font-size: 24rpx;
}



/* 菜谱列表 */
.recipe-list {
  padding: 30rpx 20rpx 0 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 4rpx;
  margin-bottom: 0;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #333;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.empty-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 30rpx;
  font-weight: 500;
}

/* 菜谱卡片 */
.recipe-cards {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.recipe-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.recipe-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.card-image {
  position: relative;
  height: 320rpx;
  overflow: hidden;
}

.recipe-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.placeholder-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.dish-emoji {
  font-size: 120rpx;
}

.difficulty-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: white;
}

/* 难度等级样式 - 使用英文类名避免编码问题 */
.difficulty-easy {
  background: #667eea;
}

.difficulty-medium {
  background: #fdcb6e;
}

.difficulty-hard {
  background: #e17055;
}

/* 无图片时的难度标签容器 */
.no-image-difficulty {
  position: relative;
  padding: 20rpx;
  display: flex;
  justify-content: flex-end;
}

/* 无图片时的难度标签样式 */
.difficulty-tag-no-image {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: white;
  display: inline-block;
}

.card-content {
  padding: 32rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.dish-name {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  flex: 1;
  margin-right: 20rpx;
}

.cooking-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.time-text {
  font-size: 24rpx;
}

.description {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tag {
  color: white;
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  line-height: 0.7;
  display: inline-flex;
  align-items: center;
  /* 移除默认背景，让随机颜色可以正确显示 */
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 标签随机颜色 */
.tag-color-1 {
  background: rgba(255, 107, 107, 0.9) !important;
  border-color: rgba(255, 107, 107, 1) !important;
}

.tag-color-2 {
  background: rgba(78, 205, 196, 0.9) !important;
  border-color: rgba(78, 205, 196, 1) !important;
}

.tag-color-3 {
  background: rgba(255, 195, 113, 0.9) !important;
  border-color: rgba(255, 195, 113, 1) !important;
}

.tag-color-4 {
  background: rgba(162, 155, 254, 0.9) !important;
  border-color: rgba(162, 155, 254, 1) !important;
}

.tag-color-5 {
  background: rgba(255, 154, 162, 0.9) !important;
  border-color: rgba(255, 154, 162, 1) !important;
}

.tag-color-6 {
  background: rgba(108, 92, 231, 0.9) !important;
  border-color: rgba(108, 92, 231, 1) !important;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.servings {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.creator {
  display: flex;
  align-items: center;
}

.creator-name {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  opacity: 0.6;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.add-modal,
.detail-modal {
  background: white;
  border-radius: 24rpx;
  width: 100%;
  max-width: 640rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.detail-modal {
  max-height: 85vh; /* 降低最大高度，为底部按钮留出空间 */
  height: auto; /* 改为自动高度 */
}

/* 覆盖全局滚动条样式 - 针对弹窗 */
.detail-modal ::-webkit-scrollbar {
  width: 8rpx !important;
  background: transparent !important;
}

.detail-modal ::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.02) !important;
  border-radius: 4rpx !important;
  margin-right: 10rpx !important;
}

.detail-modal ::-webkit-scrollbar-thumb {
  background: rgba(0, 0, 0, 0.08) !important;
  border-radius: 4rpx !important;
  margin-right: 10rpx !important;
}

.detail-modal ::-webkit-scrollbar-thumb:hover {
  background: rgba(0, 0, 0, 0.12) !important;
}

.modal-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f8f9fa;
  position: relative;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.close-btn {
  background: #f8f9fa;
  border: none;
  border-radius: 50%;
  width: 50rpx !important;
  height: 50rpx !important;
  min-width: 50rpx;
  min-height: 50rpx;
  max-width: 50rpx;
  max-height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.8);
  flex-shrink: 0;
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  box-sizing: border-box;
  padding: 0;
  overflow: hidden;
}

/* 自定义关闭按钮的X符号 */
.close-btn::before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 2rpx;
  background-color: #333;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
}

.close-btn::after {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 2rpx;
  background-color: #333;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(-45deg);
}

.modal-content {
  flex: 1;
  padding: 32rpx 48rpx 32rpx 32rpx; /* 右侧增加padding为滚动条留出空间 */
  max-height: calc(85vh - 200rpx); /* 设置最大高度，确保底部按钮可见 */
  overflow-y: auto; /* 确保内容可滚动 */
  box-sizing: border-box;
}

/* 移除之前的滚动条隐藏样式，改为调整位置 */
.scroll-hidden {
  padding-right: 24rpx !important; /* 为滚动条预留更多空间 */
  box-sizing: border-box !important;
}

/* 添加菜谱弹窗 */
.input-section {
  margin-bottom: 32rpx;
}

.recipe-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background: #f8f9fa;
  color: #333;
}

.input-counter {
  text-align: right;
  margin-top: 12rpx;
  color: #666;
  font-size: 24rpx;
}

.tips {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 32rpx;
  margin-top: 4rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
}

.modal-footer {
  padding: 32rpx;
  border-top: 2rpx solid #f8f9fa;
  display: flex;
  gap: 20rpx;
}

.cancel-btn {
  flex: 1;
  background: #f0f0f0;
  color: #333;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
}

.generate-btn,
.save-btn {
  flex: 2;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.generate-btn.loading {
  opacity: 0.7;
}

.btn-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

/* 详情弹窗内容 */
.recipe-info {
  margin-bottom: 40rpx;
}

.finished-image-section {
  margin-bottom: 24rpx;
}

.finished-image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.finished-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.no-image {
  width: 100%;
  height: 300rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.dish-emoji-large {
  font-size: 100rpx;
}

.no-image-text {
  color: #666;
  font-size: 28rpx;
}

.recipe-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 24rpx;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
}

.recipe-attrs {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.attr-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #f8f9fa;
}

.attr-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.attr-value {
  font-size: 28rpx;
  color: #666;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

/* 食材列表 */
.ingredients-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.ingredients-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.ingredient-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  position: relative;
}

.ingredient-item.editing {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.ingredient-emoji {
  font-size: 32rpx;
}

.ingredient-content {
  display: flex;
  flex: 1;
  align-items: center;
}

.ingredient-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
}

.ingredient-amount {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.ingredient-edit {
  display: flex;
  flex: 1;
  align-items: center;
  gap: 16rpx;
}

.ingredient-name-input {
  flex: 2;
  padding: 16rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}

.ingredient-amount-input {
  flex: 1;
  padding: 16rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}

.remove-btn {
  width: 30rpx !important;
  height: 30rpx !important;
  min-width: 30rpx !important;
  min-height: 30rpx !important;
  max-width: 30rpx !important;
  max-height: 30rpx !important;
  border-radius: 50% !important;
  background: #ff4757 !important;
  color: white !important;
  font-size: 18rpx !important;
  font-weight: bold;
  border: none !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  margin-left: 20rpx;
  padding: 0 !important;
  line-height: 1 !important;
  box-sizing: border-box !important;
}

/* 制作步骤 */
.steps-section {
  margin-bottom: 40rpx;
}

.steps-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.step-item {
  display: flex;
  gap: 20rpx;
  align-items: flex-start;
  position: relative;
}

.step-item.editing {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  background: #667eea;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.step-content-wrapper {
  flex: 1;
}

.step-content {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  padding-top: 8rpx;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
}

.step-edit {
  display: flex;
  flex: 1;
  align-items: flex-start;
  gap: 16rpx;
}

.step-textarea {
  flex: 1;
  min-height: 60rpx;
  max-height: 120rpx;
  padding: 16rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 1.5;
  resize: none;
  color: #333;
}

/* 标签区域 */
.tags-section {
  margin-bottom: 20rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  width: 100%;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 16rpx;
  border: none;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: white;
}

.upload-btn {
  background: linear-gradient(135deg, #74b9ff, #0984e3);
}

.edit-btn {
  background: linear-gradient(135deg, #fdcb6e, #e17055);
}

.delete-btn {
  background: linear-gradient(135deg, #fd79a8, #e84393);
}

.edit-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

/* 编辑表单 */
.edit-input {
  width: 100%;
  padding: 16rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: white;
}

.edit-input.small {
  width: 120rpx;
  text-align: center;
}

.edit-picker {
  padding: 16rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  background: white;
  min-width: 120rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .page-header {
    flex-direction: column;
    gap: 20rpx;
    align-items: stretch;
  }
  
  .page-title {
    text-align: center;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .action-btn {
    flex-direction: row;
    justify-content: center;
  }
}