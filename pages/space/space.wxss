  background-color: white;
  padding: 30rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.comment-modal.show .comment-input-area {
  transform: translateY(0);
}

.comment-input {
  flex: 1;
  height: 80rpx;
  padding: 0 30rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 40rpx;
  font-size: 30rpx;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
}

.comment-input:focus {
  border-color: #667eea;
  background-color: white;
}

.send-btn {
  width: 140rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.send-btn:active {
  transform: scale(0.95);
}

.send-btn[disabled] {
  background: #ccc;
}