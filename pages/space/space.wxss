/* 容器和背景 */
.container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  padding: 0; /* 重写全局样式，移除padding */
  /* 移除背景色，让背景图片显示 */
  background: transparent;
  /* 移除overflow hidden，允许下拉刷新正常工作 */
}

/* 确保页面透明，显示背景图片 */
page {
  background: transparent;
  overflow-x: hidden; /* 防止水平滚动 */
  position: relative;
  min-height: 100vh;
}

/* 内容区域 */
.content-area {
  position: relative; /* 改为相对定位 */
  width: 100%;
  min-height: 100vh;
  padding: 0 20rpx 20rpx 20rpx; /* 只保留左右和底部padding */
  box-sizing: border-box;
  background: transparent; /* 确保透明 */
  transform: translateZ(0); /* 启用硬件加速，优化滚动性能 */
}

/* 动态列表 */
.moments-list {
  padding-top: 0; /* 移除顶部padding */
  padding-bottom: 160rpx;
}

/* 瞬间卡片玻璃效果 */
.moment-item {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  margin: 20rpx;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  /* 简化transition */
  transition: transform 0.2s ease;
}

/* 移除整个瞬间的缩放效果 */

/* 优化模态框动画 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  /* 简化动画 */
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}



/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  position: relative;
}

.user-details {
  flex: 1;
  margin-left: 20rpx;
}

.delete-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.delete-btn:active {
  transform: scale(0.95);
  background: rgba(255, 245, 245, 0.9);
}

.delete-icon {
  font-size: 28rpx;
  color: #666;
  opacity: 0.7;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  background-color: #e0e0e0;
}

.user-details {
  flex: 1;
}

.username {
