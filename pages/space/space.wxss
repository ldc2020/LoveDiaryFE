  -webkit-user-select: text;
  position: relative;
  z-index: 1;
}

.content-input:focus {
  border-color: rgba(255, 107, 107, 0.5);
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 0 0 4rpx rgba(255, 107, 107, 0.1);
}

