/* 图片容器 */
.image-container {
  margin-bottom: 20rpx;
}

/* 单张图片样式 */
.single-image-container {
  width: 100%;
  max-width: 500rpx;
}

.single-image {
  width: 100%;
  max-width: 500rpx;
  height: 400rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
}

/* 多张图片网格容器 */
.grid-container {
  width: 100%;
}

/* 图片网格 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
  width: 100%;
}

/* 基础网格图片样式 */
.grid-image {
  border-radius: 8rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

/* 2张图片 */
.grid-2 .grid-image {
  width: calc((100% - 6rpx) / 2);
  height: 200rpx;
}

/* 3张图片 */
.grid-3 .grid-image {
  width: calc((100% - 12rpx) / 3);
  height: 160rpx;
}

/* 4张图片 */
.grid-4 .grid-image {
  width: calc((100% - 6rpx) / 2);
  height: 180rpx;
}

/* 5-6张图片 */
.grid-5 .grid-image,
.grid-6 .grid-image {
  width: calc((100% - 12rpx) / 3);
  height: 140rpx;
}

/* 7-9张图片 */
.grid-7 .grid-image,
.grid-8 .grid-image,
.grid-9 .grid-image {
  width: calc((100% - 12rpx) / 3);
  height: 120rpx;
}

/* 超过9张图片的提示 */
.more-images {
  width: calc((100% - 12rpx) / 3);
  height: 120rpx;
  border-radius: 8rpx;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.more-count {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

/* 互动区域 */
.interaction-area {
  display: flex;
  align-items: center;
  gap: 40rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 点赞按钮容器 */
.like-btn-container {
  position: relative;
  display: inline-block;
}

.like-btn, .comment-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
  background-color: #f8f8f8;
  transition: all 0.2s ease;
  opacity: 0.5 !important;
}

.like-btn:active {
  transform: scale(0.95);
  background-color: #ffe6e6;
}

/* 飘心动画效果 */
.floating-hearts {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 10;
}

.floating-heart {
  position: absolute;
  font-size: 32rpx;
  opacity: 0;
  animation: floatUp 2s ease-out forwards;
  pointer-events: none;
}

.floating-heart.heart-1 {
  left: 20%;
  animation-delay: 0s;
}

.floating-heart.heart-2 {
  left: 50%;
  animation-delay: 0.3s;
}

.floating-heart.heart-3 {
  left: 80%;
  animation-delay: 0.6s;
}

@keyframes floatUp {
  0% {
    opacity: 1;
    transform: translateY(0) scale(0.8);
  }
  50% {
    opacity: 0.8;
    transform: translateY(-60rpx) scale(1.2);
  }
  100% {
    opacity: 0;
    transform: translateY(-120rpx) scale(0.6);
  }
}

.like-btn.liked {
  background-color: #ffe6e6;
}

.like-btn .icon, .comment-btn .icon {
  font-size: 28rpx;
}

.like-btn .count, .comment-btn .count {
  font-size: 24rpx;
  color: rgb(22, 21, 21) !important;
  opacity: 1 !important;
}

/* 评论区域 */
.comments-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  opacity: 1 !important;
}

.comment-item {
