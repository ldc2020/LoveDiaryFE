  color: #999;
  opacity: 1;
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  pointer-events: none;
  transform: translateZ(0);
}

.content-input::-moz-placeholder {
  color: #999;
  opacity: 1;
}

.content-input:-ms-input-placeholder {
  color: #999;
  opacity: 1;
}

.content-input::placeholder {
