/* pages/home/home.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 40rpx;
  position: relative;
}

/* 使用全局背景图片样式，已在app.wxss中定义 */

.settings-icon {
  position: absolute;
  top: 60rpx;
  right: 40rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

/* 设置弹出框分隔线 */
.popup-divider {
  height: 1rpx;
  background: rgba(0, 0, 0, 0.1);
  margin: 8rpx 0;
}

.iconfont.icon-settings:before {
  content: '\e78e';
  font-size: 40rpx;
}

.settings-popup {
  position: absolute;
  top: 110rpx;
  right: 40rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  overflow: hidden;
  min-width: 200rpx;
}

.popup-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
}

.popup-item:active {
  background: rgba(0, 0, 0, 0.05);
}

.unbind-item {
  color: #ff4757 !important;
  font-weight: bold;
}

.unbind-item:active {
  background: rgba(255, 71, 87, 0.1) !important;
}

.image-showCarouselImages {
  width: 88%;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 20rpx;
  padding: 10rpx;
  margin: 120rpx 0 60rpx 0;
  position: relative;
  top: -10rpx;
  z-index: 1;
}

.image-swiper {
  width: 100%;
  height: 400rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.slide-image.dragging {
  opacity: 0.5;
  transform: scale(0.9);
}

.showcase-text {
  display: block;
  text-align: center;
  margin-top: 20rpx;
  color: #333;
  font-size: 28rpx;
}

.feature-blocks {
  width: 90%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

/* 长按删除相关样式 */
.floating-image {
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  z-index: 1000;
  pointer-events: none;
  border-radius: 10rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
  transition: none;
  will-change: transform;
  transform: translateZ(0);
}

.floating-img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.trash-can-area {
  position: fixed;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 999;
  animation: slideUpBounce 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  transition: all 0.2s ease;
}

.trash-can-area.active {
  transform: translateX(-50%) scale(1.1);
}

.trash-can {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  border: none;
  border-radius: 70rpx;
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 107, 0.4), 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
}

.trash-can.active {
  background: linear-gradient(135deg, #ff4757, #ff3742);
  box-shadow: 0 12rpx 35rpx rgba(255, 71, 87, 0.6), 0 6rpx 15rpx rgba(0, 0, 0, 0.2), 0 0 0 6rpx rgba(255, 71, 87, 0.2);
  transform: scale(1.05);
}

.trash-can::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), transparent);
  border-radius: 70rpx;
  pointer-events: none;
}

.trash-can::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100rpx;
  height: 100rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1), transparent);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: pulse 2s infinite;
  pointer-events: none;
}

.delete-text {
  font-size: 18rpx;
  color: #ffffff;
  font-weight: 600;
  text-align: center;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
  z-index: 1;
  position: relative;
}

@keyframes slideUpBounce {
  0% {
    transform: translateX(-50%) translateY(150%);
    opacity: 0;
    scale: 0.8;
  }
  60% {
    transform: translateX(-50%) translateY(-10rpx);
    opacity: 1;
    scale: 1.05;
  }
  100% {
    transform: translateX(-50%) translateY(0);
    opacity: 1;
    scale: 1;
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.3;
    scale: 1;
  }
  50% {
    opacity: 0.6;
    scale: 1.2;
  }
}

.feature-block {
  background: rgba(255, 255, 255, 0.9);
  padding: 30rpx;
  border-radius: 15rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}



/* 简化动画关键帧 */
@keyframes slideUp {
  0% {
    transform: translateX(-50%) translateY(100%);
    opacity: 0;
  }
  100% {
    transform: translateX(-50%) translateY(0);
    opacity: 1;
  }
}

/* 优化脉冲动画 */
@keyframes pulse {
  0%, 100% {
    opacity: 0.4;
  }
  50% {
    opacity: 0.7;
  }
}